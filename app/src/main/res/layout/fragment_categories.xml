<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/categoriesback">

    <TextView
        android:id="@+id/textviewCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Categories"
        android:textColor="@color/white_text"
        android:textSize="50dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/BtnFastFood"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textviewCategories"
        android:layout_marginTop="20dp"
        android:background="@color/red_FirstScreen"
        android:text="Fast Food"
        android:textColor="@color/white_text"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/BtnDesi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/BtnFastFood"
        android:layout_marginTop="30dp"
        android:background="@color/red_FirstScreen"
        android:text="Desi"
        android:textColor="@color/white_text"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/BtnItalian"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/BtnDesi"
        android:layout_marginTop="30dp"
        android:background="@color/red_FirstScreen"
        android:text="Italian"
        android:textColor="@color/white_text"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/BtnChinese"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/BtnItalian"
        android:layout_marginTop="30dp"
        android:background="@color/red_FirstScreen"
        android:text="Chinese"
        android:textColor="@color/white_text"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/BtnIceCreams"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/BtnChinese"
        android:layout_marginTop="30dp"
        android:background="@color/red_FirstScreen"
        android:text="Ice Creams"
        android:textColor="@color/white_text"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/BtnDrinks"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/BtnIceCreams"
        android:layout_marginTop="30dp"
        android:background="@color/red_FirstScreen"
        android:text="Drinks"
        android:textColor="@color/white_text"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="serif" />


</RelativeLayout>