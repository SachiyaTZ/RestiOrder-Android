<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_FirstScreen"
    tools:context=".Welcome_Screen">

    <TextView
        android:id="@+id/myorderWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageWelcome"
        android:text="My Order"
        android:textColor="@color/white_text"
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginLeft="80dp"/>

    <ImageView
        android:id="@+id/imageWelcome"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:paddingBottom="5dp"
        android:src="@mipmap/purepng" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myorderWelcome"
        android:layout_centerHorizontal="true"
        android:text="@string/slogan"
        android:textColor="@color/white_text"
        android:textStyle="italic"
        android:typeface="serif" />


</RelativeLayout>