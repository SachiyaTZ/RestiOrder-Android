<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.navigationbar">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/iconapp"
        android:label="My Order"
        android:roundIcon="@mipmap/iconapp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HotDrinks"
            android:parentActivityName=".Drinks" />
        <activity
            android:name=".SoftDrinks"
            android:parentActivityName=".Drinks" />
        <activity
            android:name=".Add_to_Cart_SoftDrinks"
            android:parentActivityName=".SoftDrinks" />
        <activity
            android:name=".Add_to_Cart"
            android:parentActivityName=".FastFood" />
        <activity
            android:name=".Welcome_Screen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Drinks"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".IceCream"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ChineseFood"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ItalianFood"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Desi"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FastFood"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>



</manifest>